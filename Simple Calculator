#include <stdio.h>

void main()
{
     printf("Welcome to C\n");
    sub();

}

void sub()
{
    int x,y;
    printf("enter x : ");
    scanf("%d",&x);
    printf("enter y : ");
    scanf("%d",&y);
   int sum=0;
   sum=x-y;
   printf("Subtraction Result is %d",sum);
}

