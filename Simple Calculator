#include <stdio.h>

void main()
{
     printf("Welcome to C\n");
    divide();
}
void divide()
{
    int x,y;
    printf("enter x : ");
    scanf("%d",&x);
    printf("enter y : ");
    scanf("%d",&y);
   int sum=0;
   sum=x/y;
   printf("Division is %d",sum);
}
