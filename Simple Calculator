#include <stdio.h>

void main()
{
     printf("Welcome to C\n");
    add();

}

void add()
{
    int x,y;
    printf("enter x : ");
    scanf("%d",&x);
    printf("enter y : ");
    scanf("%d",&y);
   int sum=0;
   sum=x+y;
   printf("Addition Result is %d",sum);
}

